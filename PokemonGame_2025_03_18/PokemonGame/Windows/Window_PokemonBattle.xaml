<Window x:Class="PokemonGame.Windows.Window_PokemonBattle" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:local="clr-namespace:PokemonGame.Windows" mc:Ignorable="d" Title="Window_PokemonBattle" Height="600" Width="800">
    <Grid>
        <Image x:Name="Image_SecondEnemy" Margin="515,180,93,220" Source="/Images/Pokemons/Chansey.png" Stretch="Fill" />
        <Image Margin="25,172,415,212" Source="/Images/Pokemons/Pikachu.png" Stretch="Fill" />
        <ProgressBar Name="ProgressBar_Pokemon1_HP" HorizontalAlignment="Left" Height="42" Margin="25,372,0,0" VerticalAlignment="Top" Width="360" Foreground="#FF00DC28" Value="50" Background="#FFCDFFA6" />
        <Label x:Name="Label_Pokemon1_HP" Content="X/X" HorizontalContentAlignment="Center" HorizontalAlignment="Left" Margin="25,374,0,0" VerticalAlignment="Top" Height="38" Width="360" FontSize="20" />
        <ProgressBar x:Name="ProgressBar_Pokemon2_HP" HorizontalAlignment="Left" Height="42" Margin="420,373,0,0" VerticalAlignment="Top" Width="360" Foreground="#FFB52900" Background="#FFF5BCBC" Value="50" />
        <Label x:Name="Label_Pokemon2_HP" Content="X/X" HorizontalContentAlignment="Center" HorizontalAlignment="Left" Margin="420,375,0,0" VerticalAlignment="Top" Height="37" Width="360" FontSize="20" />

        <Button x:Name="Button_LA" Content="Light Attack" HorizontalAlignment="Left" Margin="25,464,0,0" VerticalAlignment="Top" Height="42" Width="111" Background="#FFA2F990" Click="Button_Click" />
        <Button x:Name="Button_MA" Content="Medium Attack" HorizontalAlignment="Left" Margin="141,464,0,0" VerticalAlignment="Top" Height="42" Width="121" Background="#FFF9F090" Click="Button_Click_1" />
        <Button x:Name="Button_HA" Content="High Attack" HorizontalAlignment="Left" Margin="267,464,0,0" VerticalAlignment="Top" Height="42" Width="118" Background="#FFF99090" Click="Button_Click_2" />
        <Button x:Name="Button_Heal" Content="Heal" HorizontalAlignment="Left" Margin="141,514,0,0" VerticalAlignment="Top" Height="42" Width="121" Background="#FFF990F0" Click="Button_Click_3" />
        <ListBox x:Name="ListView_FightLogger" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,0,0,400" Background="{x:Null}" HorizontalContentAlignment="Center" BorderBrush="{x:Null}" />
        <ProgressBar x:Name="ProgressBar_Pokemon2_Energy" HorizontalAlignment="Left" Height="39" Margin="420,420,0,0" VerticalAlignment="Top" Width="360" Foreground="#FF1437C5" Background="#FF5D9DE6" Value="50"/>
        <ProgressBar x:Name="ProgressBar_Pokemon1_Energy" HorizontalAlignment="Left" Height="39" Margin="25,420,0,0" VerticalAlignment="Top" Width="360" Foreground="#FF1437C5" Background="#FF5D9DE6" Value="50" />
        <Label x:Name="Label_Pokemon1_Energy" Content="X/X" HorizontalAlignment="Left" Margin="191,427,0,0" VerticalAlignment="Top"/>
        <Label x:Name="Label_Pokemon2_Energy" Content="X/X" HorizontalAlignment="Left" Margin="582,427,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
